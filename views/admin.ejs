        // Control Functions
        function resetVotes() {
            if (confirm('B·∫°n c√≥ ch·∫Øc mu·ªën x√≥a T·∫§T C·∫¢ l∆∞·ª£t b√¨nh ch·ªçn? H√†nh ƒë·ªông n√†y kh√¥ng th·ªÉ ho√†n t√°c!')) {
                fetch('/admin/reset-votes', { method: 'POST' })
                .then(response => response.json())
